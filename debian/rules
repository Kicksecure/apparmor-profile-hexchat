#export DH_VERBOSE=1

%:
	dh $@

override_dh_install:
	dh_apparmor --profile-name=usr.bin.xchat -p$(shell dh_listpackages)
	dh_apparmor --profile-name=usr.bin.hexchat -p$(shell dh_listpackages)
	dh_install

override_dh_installchangelogs:
	dh_installchangelogs changelog.upstream upstream
